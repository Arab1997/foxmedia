<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@android:color/white"
    android:elevation="0dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/img_vid_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/youtube_thumbnail" />
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_img"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/card_img"
            android:text="Life After People"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_video_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/card_img"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="ajsndjnfasdsdaadssjaasdknfdjknfjsfnjsadfbajfjfdsjkfdjkhsfdkjhdsjkhjksdjksdhjsfdhkjdhjkshahjbfdhsbhjbsfbhjbghjbfdjbbfdjfdjjhsbhbfhjjhsfbhjhbjhfbhjbfhjhjfbhjbfhjbfhjbhjfbhjbfdhbdknsjkdnkasdasddsammdfalkmklf" />

        <TextView
            android:id="@+id/tv_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_img"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/card_img"
            android:drawableStart="@drawable/ic_eye"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="1250"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_seen"
            android:layout_alignBottom="@id/tv_seen"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/tv_seen"
            android:gravity="center"
            android:text="02.04.2020" />
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>